    <bean id ="StudentDAO" class="second.StudentDAO">
        <property name="template" ref="template"/>
    </bean>
    <bean id ="template" class="org.springframework.orm.hibernate3.HibernateTemplate">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>
    
