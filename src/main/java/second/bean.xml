    <bean id="dataSource"
          class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="com.microsoft.sqlserver.jdbc.SQLServerDriver" />
        <property name="url" value="jdbc:sqlserver://localhost;databaseName=newmanagment;" />
        <property name="username" value="sa" />
        <property name="password" value="6102010" />
        <!--<property name="show_sql" value="true"/>-->
    </bean>
    
    <bean id="sessionFactory"
          class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
        <property name="dataSource" ref="dataSource"/>
        <property name="mappingResources">
            <list>
                <value>bean/CourseCategory.hbm.xml</value>
                <value>bean/Course.hbm.xml</value>
                <value>bean/Platform.hbm.xml</value>
                <value>bean/PlatfromIntake.hbm.xml</value>
                <value>bean/StudentBasicData.hbm.xml</value>
                <value>bean/SubTrack.hbm.xml</value>
                <value>bean/CourseManual.hbm.xml</value>
                <value>bean/Intake.hbm.xml</value>
                <value>bean/TrackManual.hbm.xml</value>
                <value>bean/Branch.hbm.xml</value>
                <value>bean/Programs.hbm.xml</value>
               
                <value>bean/ProgramIntake.hbm.xml</value>



            </list>
        </property>
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</prop>
                <prop key="hibernate.show_sql">true</prop>

            </props>
        </property>
    </bean>
    

</beans>
